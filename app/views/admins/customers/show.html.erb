<div class="container">
  <div class="row">
    <h2 class="col-lg-12"><%= @customer.last_name %> <%= @customer.first_name %>さんの会員詳細</h2>
    <div class="mt-3">
      <table class="table-borderless">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.ruby_last_name %> <%= @customer.ruby_first_name %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <% if @customer.is_deleted == false %>
              <div class="text-success">有効</div>
            <% else %>
              <div class="text-secondary">退会</div>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
    <div class="col-lg-12 mt-5 d-flex">
      <%= link_to '編集する', edit_admins_customer_path(@customer), class: "btn btn-success mr-5" %>
      <%= form_with model:@customer , url: admins_order_index_path, method: :get do |f| %>
        <%= f.hidden_field :id %>
        <%= f.submit '注文履歴一覧を見る', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>