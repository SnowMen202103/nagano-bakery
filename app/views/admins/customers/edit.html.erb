<h3><%= @customer.last_name %> <%= @customer.first_name %>さんの会員詳細</h3>

  <%= form_with model:@customer, url:admins_customer_path(@customer) , local:true do |f| %>
    
    <%= f.label :'会員ID' %>
    <%= @customer.id %><br>
    
    <%= f.label :'氏名' %>
    <%= f.text_field :last_name %> <%= f.text_field :first_name %><br>
    
    <%= f.label :'フリガナ' %>
    <%= f.text_field :ruby_last_name %> <%= f.text_field :ruby_first_name %><br>
    
    <%= f.label :'郵便番号' %>
    <%= f.text_field :postal_code %><br>
    
    <%= f.label :'住所' %>
    <%= f.text_field :address, size: "60" %><br>
    
    <%= f.label :'電話番号' %>
    <%= f.text_field :phone_number %><br>
    
    <%= f.label :'メールアドレス' %>
    <%= f.text_field :email %><br>
    
    <%= f.label :is_deleted, '会員ステータス' %>
    <%= f.radio_button :is_deleted, false, checked: true %>
    <%= f.label :is_deleted, '有効', value: false %>
    <%= f.radio_button :is_deleted, true %>
    <%= f.label :is_deleted, '退会', value: true %><br>
    
    <%= f.submit '変更を保存' %>
  <% end %>