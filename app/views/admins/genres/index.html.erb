
<div class="container">
  <div class="row">

  <h3 class="col-md-10">ジャンル一覧・追加</h3>

<div class="col-md-10 mt-5">
  <%= form_with model: @genre, url: admins_genres_path, local:true do |f| %>
    <%= render "layouts/error_messages", resouce: @genre %>
    <%= f.label :'ジャンル名' %>
    <%= f.text_field :name %>
    <%= f.submit '新規登録', class: "btn btn-success ml-3" %>
  <% end %>
</div>

<div class="col-md-10 mt-5">
  <table class="table">
    <thead class="thead-light">
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
    </thead>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to '編集する', edit_admins_genre_path(genre), class: "btn btn-success" %></td>
    </tr>
    <% end %>
  </table>
</div>

</div>
</div>