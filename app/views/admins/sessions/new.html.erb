<div class="container">
  <div class="row">

    <h2 class="col-md-10">管理者ログイン</h2>

    <div class="mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table class="table table-borderless">
      <tr>
        <div class="field">
          <th><%= f.label :'メールアドレス' %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com' %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <th><%= f.label :'パスワード' %></th>
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>
        </div>
      </tr>
    </table>

      <div class="actions col-md-12 text-center">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

</div>
</div>