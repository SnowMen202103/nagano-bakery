<h3>商品詳細</h3>

  <%= attachment_image_tag @item, :image %>
  <table>
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.content %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= @item.genre.name %></td>
    </tr>
    <tr>
      <td>税込み価格<br>(税抜き価格)</td>
      <td><%= (@item.price * 1.1).round %>(<%= @item.price %>) 円</td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td>
        <% if @item.sell_status == true %>
          販売中
        <% else %>
          販売停止中
        <% end %>
      </td>
    </tr>
  </table>
  
  <%= link_to '編集する', edit_admins_item_path(@item) %>