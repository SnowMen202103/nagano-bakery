<div class="container">
<div class="row">

  <h2 class="col-md-8 mb-5">商品詳細</h2>

    <div class="col-md-6 d-flex">
      <%= attachment_image_tag @item, :image, class: "mr-5" %>
    <!--</div>-->
    <!--<div class="ml-3">-->
      <table class="table table-borderless">
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.content %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税込価格<br>(税抜価格)</th>
          <td><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>) 円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.sell_status == true %>
              販売中
            <% else %>
              販売停止中
            <% end %>
          </td>
        </tr>
      </table>
    </div>

    <div class="col-md-12 text-center">
      <%= link_to '編集する', edit_admins_item_path(@item), class: "btn btn-success" %>
    </div>

  </div>
  </div>