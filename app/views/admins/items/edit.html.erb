<div class="container">
<div class="row">

  <h2>商品編集</h2>

  <div>
    <%= form_with model: @item, url: admins_item_path, local:true do |f| %>
    <%= render "layouts/error_messages", resource: @item %>
    <table class="table table-borderless">
      <tr>
        <th><%= f.label :'商品画像' %></th>
        <td><%= f.attachment_field :image %></td><br>
      </tr>
      <tr>
        <th><%= f.label :'商品名' %></th>
        <td><%= f.text_field :name, placeholder: '商品名' %></td><br>
      </tr>
      <tr>
        <th><%= f.label :'商品説明' %></th>
        <td><%= f.text_area :content, placeholder: 'ここに説明文を記述します', size: "30x10" %></td><br>
      </tr>
      <tr>
        <th><%= f.label :'ジャンル' %></th>
        <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %></td><br>
      </tr>
      <tr>
        <th><%= f.label :'税抜き価格' %></th>
        <td><%= f.text_field :price, placeholder: '1000' %><span> 円</span></td><br>
      </tr>
      <tr>
        <th><%= f.label :'販売ステータス' %></th>
        <td><%= f.radio_button :sell_status, :true, checked: true %>
        <%= f.label :'販売中' %>
        <%= f.radio_button :sell_status, :false %>
        <%= f.label :'販売停止中' %><br></td>
      </tr>
    </table>
      <%= f.submit '変更を保存', class:"btn btn-success" %>
    <% end %>
  </div>
    
  </div>
  </div>