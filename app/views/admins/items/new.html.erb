<div class="container">
  <h3>商品新規登録</h3>
  <div class="row">
    <table class="table table-borderless">
      <%= form_with model: @item, url: admins_items_path, local:true do |f| %>
        <%= render "layouts/error_messages", resource: @item %>
        <tr>
          <th><%= f.label :'商品画像' %></th>
          <td><%= f.attachment_field :image %></td>
        </tr>
          
        <tr>
          <th><%= f.label :'商品名' %></th>
          <td><%= f.text_field :name, placeholder: '商品名' %></td>
        </tr>
        
        <tr>
          <th><%= f.label :'商品説明' %></th>
          <td><%= f.text_area :content, placeholder: 'ここに説明文を記述します', size: "30x10" %></td>
        </tr>
        
        <tr>
          <th><%= f.label :'ジャンル' %></th>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %></td>
        </tr>
        
        <tr>
          <th><%= f.label :'税抜価格' %></th>
          <td><%= f.text_field :price, placeholder: '1000' %><span> 円</span></td>
        </tr>
        
        <tr>
          <th><%= f.label :sell_status, '販売ステータス' %></th>
          <td>
            <%= f.radio_button :sell_status, true, checked: true %>
            <%= f.label :sell_status, '販売中', value: true %><br>
            <%= f.radio_button :sell_status, false %>
            <%= f.label :sell_status, '販売停止中', value: false %><br>
          </td>
        </tr>
        
        <tr>
          <th></th>
          <td><%= f.submit '新規登録', class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>