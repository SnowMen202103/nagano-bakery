<h3>商品新規登録</h3>

  <%= form_with model: @item, url: admins_items_path, local:true do |f| %>
    <%= render "layouts/error_messages", resource: @item %>
    <%= f.label :'商品画像' %>
    <%= f.attachment_field :image %><br>
    
    <%= f.label :'商品名' %>
    <%= f.text_field :name, placeholder: '商品名' %><br>
    
    <%= f.label :'商品説明' %>
    <%= f.text_area :content, placeholder: 'ここに説明文を記述します', size: "30x10" %><br>
    
    <%= f.label :'ジャンル' %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %><br>
    
    <%= f.label :'税抜価格' %>
    <%= f.text_field :price, placeholder: '1000' %><span> 円</span><br>
    
    <%= f.label :sell_status, '販売ステータス' %>
    <%= f.radio_button :sell_status, true, checked: true %>
    <%= f.label :sell_status, '販売中', value: true %>
    <%= f.radio_button :sell_status, false %>
    <%= f.label :sell_status, '販売停止中', value: false %><br>
    
    <%= f.submit '新規登録' %>
  <% end %>