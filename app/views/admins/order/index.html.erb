<div class="container">
  <h2>注文履歴一覧</h2>
    <div class="row">
        <table class="table">
          <thead>
            <tr>
              <td class="table-danger">購入日時</td>
              <td class="table-danger">購入者</td>
              <td class="table-danger">注文個数</td>
              <td class="table-danger">注文ステータス</td>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admins_order_path(order.id) do %>
                  <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
                <% end %>
              </td>
              <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
              <td>
                <% @amount = 0 %>
                <% order.order_details.each do |order_detail| %>
                  <% @amount += order_detail.amount %>
                <% end %>
                <%= @amount %>
              </td>
              <td><%= order.order_status %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      <%= paginate @orders %>
  </div>
</div>