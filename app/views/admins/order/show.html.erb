<div class="container">
  <div class="row">
    <div class="col">

    <h2>注文履歴詳細</h2>

      <div class="col-md-9">
      <table class="table table-borderless">
        <tr>
          <th>購入者</th>
          <td class="text-left">
            <%= @order.customer.first_name %><%= @order.customer.last_name %>
          </td>
        </tr>
        <tr>
        <tr>
          <th>注文日</th>
          <td class="text-left">
            <%= @order.created_at.strftime('%Y/%m/%d') %>
          </td>
        </tr>
        <tr>
        <tr>
          <th>配送先</th>
          <td class="text-left">
            <%= @order.postal_code %>&nbsp;<%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
        <tr>
          <th>支払方法</th>
          <td class="text-left">
            <%= @order.pay_way %>
          </td>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <td class="text-left">
            <%= form_with model: @order, url: admins_order_path(@order), method: :patch, local: true do |f| %>
			         <%= f.select :order_status, Order.order_statuses.keys %>
			         <%= f.submit '更新' , class: "btn btn-success" %>
			      <% end %>
          </td>
        </tr>
      </table>
      </div>

    <div class="d-flex">
      <div class="col-md-9">
      <table class="table">
        <thead class="thead-danger">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @sum = 0 %>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.in_tax_price %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.in_tax_price * order_detail.amount %></td>
              <% @sum += order_detail.in_tax_price * order_detail.amount %>
              <%= form_with model: order_detail, url: admins_order_detail_path(order_detail), method: :patch, local: true do |f| %>
			         <td><%= f.select :making_status, OrderDetail.making_statuses.keys, {prompt: 0} %></td>
			         <td><%= f.submit '更新' , class: "btn btn-success" %></td>
			        <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>

      <table class="table-borderless ml-5 mt-auto">
        <tr>
          <th>商品合計</th>
          <td><%= @sum %>円</td>
        </tr>
        <tr>
          <th>送料</th>
          <td>800円</td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%= @order.total_price %>円</td>
        </tr>
      </table>
    </div>

  </div>
  </div>
  </div>