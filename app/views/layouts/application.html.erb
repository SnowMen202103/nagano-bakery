<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
   <header>
       <h3>
          <a href="/"><img src="/assets/nagano.png"></a>
       </h3>
       <nav>
          <ul>
            <% if customer_signed_in? %>
              <!--<li>ようこそ、<= customer.name %>さん！</li>-->
            <% end %>
            <% if customer_signed_in? %>
              <%= link_to "#", class: "nav text-decoration-none text-center" do %>
               <li class="nav text-center">マイページ</li>
              <% end %>
            <% else %>
              <%= link_to "#", class: "nav text-decoration-none text-center" do %>
               <li class="nav text-center">About</li>
              <% end %>
            <% end %>
            <%= link_to sweets_index_path, class: "nav text-decoration-none text-center" do %>
             <li class="nav text-center">商品一覧</li>
            <% end %>
            <% if customer_signed_in? %>
              <%= link_to "#", class: "nav text-decoration-none text-center" do %>
               <li class="nav">カート</li>
              <% end %>
              <%= link_to "/", class: "nav text-decoration-none text-center" do %>
               <li class="nav">ログアウト</li>
              <% end %>
            <% else %>
              <%= link_to new_customer_registration_path, class: "nav text-decoration-none text-center" do %>
               <li class="nav">新規登録</li>
              <% end %>
              <%= link_to new_customer_session_path, class: "nav text-decoration-none text-center" do %>
               <li class="nav">ログイン</li>
              <% end %>
            <% end %>
          </ul>
       </nav>
    </header>
    
    <div class="yield">
    <%= yield %>
    </div>
  </body>
</html>
