<div class="container">
  <h3>配送先登録/一覧</h3>
    <%= form_with model: [@customer, @address], local:true do |f| %>
      <table class="address">
        <tr class="address">
          <td class="address"><%= f.label :"郵便番号(ハイフンなし)" %></td>
          <td class="address"><%= f.text_field :postal_code %></td>
          <td class="address"></td>
          <td class="address"></td>
        </tr>
        <tr class="address">
          <td class="address"><%= f.label :"住所" %></td>
          <td class="address"><%= f.text_field :address, size:'50' %></td>
          <td class="address"></td>
        </tr>
        <tr class="address">
          <td class="address"><%= f.label :"宛名" %></td>
          <td class="address"><%= f.text_field :name %></td>
          <td class="address"></td>
          <td class="address"><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
      </table>
    <% end %>
  <!--form_withメソッドここまで-->
  
  <table border = "1", class="mt-5",style = "border-collapse: collapse">
      <tr>
          <td class="table-danger">郵便番号</td>
          <td class="table-danger">住所</td>
          <td class="table-danger">宛名</td>
          <td class="table-danger"></td>
      </tr>
      
      <% @addresses.each do |address| %>
      <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
              <%= link_to '編集する', edit_address_path(address), class: "btn btn-success" %>
              <%= link_to '削除する', address_path(address), method: :delete, class: "btn btn-danger" %>
          </td>
      </tr>
      <% end %>
  </table>
  
  <%= paginate @addresses %>
  
</div>