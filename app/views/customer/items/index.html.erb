
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-lg-10">
          <div class="d-flex mb-3">
            <h3>商品一覧</h3>
            <h4>(全<%= @items.count %>件)</h4>
          </div>
          <div class="container">
            <div class="row">
              <% @items.each do |item| %>
                    <div class="mt-3 col-lg-3">
                        <%= link_to item_path(item) do %>
                          <%= attachment_image_tag item, :image %>
                        <% end %>
                        <p class="mt-3 mb-3"><%= item.name %></p>
                        <p class="mt-3 mb-3">￥<%= item.price %></p>
                    </div>
              <% end %>
            </div>
          </div>
        </div>
    </div>
</div>
