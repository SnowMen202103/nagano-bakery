<div class="container">
  <h2>注文情報確認</h2>
  <div class="row">

    <div class="col-md-9">
      <table class="table">
        <thead class="thead-lignt">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td class="text-left">
                <%= attachment_image_tag( cart_item.item, :image, size: "60x30", fallback: "nagano.png") %>
                <%= cart_item.item.name %>
              </td>
              <td class="text-left">
                <%= cart_item.item.price %>
              </td>
              <td class="text-left">
                <%= cart_item.amount %>
              </td>
              <td class="text-left">
                <%= cart_item.subtotal %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-3">
     <table class="table">
          <tr>
            <th>送料</th>
            <td class="col-xs-5">¥800</td>
          </tr>
          <tr>
            <th>商品合計</th>
            <!--<td class="text-right">¥<= @cart_item.item.price * @cart_item.amount %></td>-->
          </tr>
          <tr>
            <th>請求金額</th>
            <!--<td class="text-right">¥<= @order.postage + @cart_item.item.price * @cart_item.amount %></td>-->
          </tr>
      </table>
    </div>

      <div class="col-md-9">
      <table class="table table-borderless">
        <tr>
          <th>支払方法</th>
          <td class="text-left">
            <%#<%= @order.pay_way %>
          </td>
        </tr>
        <tr>
          <th>お届け先</th>
          <td class="text-left">
            〒<%= current_customer.postal_code %>&nbsp;<%= current_customer.address %><br>
            <%= current_customer.last_name %><%= current_customer.first_name %>
          </td>
        </tr>
      </table>
      </div>

