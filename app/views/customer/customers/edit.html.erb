<div class=”container”>
<div class=”row”>
<div class=”col”>

<h3>会員情報編集</h3>

<%= form_with model: @customer, url: { controller: "customer/customers", action: "update" }, method: :PATCH, local: true do |f| %>
  <div class="form-row">
    <div class="form-group col-1">名前</div>
    <div class="form-group col-2"><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></div>
    <div class="form-group col-1"><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></div>
  </div>
  <div class="form-row">
    <div class="form-group col-1">フリガナ</div>
    <div class="form-group col-2"><%= f.text_field :ruby_last_name, autofocus: true, autocomplete: "ruby_last_name" %></div>
    <div class="form-group col-1"><%= f.text_field :ruby_first_name, autofocus: true, autocomplete: "ruby_first_name" %></div>
  </div>
  <div class="form-row">
    <div class="form-group col-1">郵便番号</div>
    <div class="form-group col-1"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></div>
  </div>
  <div class="form-row">
    <div class="form-group col-1">住所</div>
    <div class="form-group col-1"><%= f.text_field :address, autofocus: true, autocomplete: "address" %></div>
  </div>
  <div class="form-row">
    <div class="form-group col-1">電話番号</div>
    <div class="form-group col-1"><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %></div>
  </div>
  <div class="form-row">
    <div class="form-group col-1">メールアドレス</div>
    <div class="form-group col-1"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
  </div>
  <div class="form-row">
    <div class="form-group col-2"><%= f.submit "変更内容を保存", class: "btn btn-success" %></div>
    <div class="form-group col-2"><%= link_to "退会する", customers_goodbye_path, class: "btn btn-danger" %></div>
  </div>
<% end %>

</div>
</div>
</div>