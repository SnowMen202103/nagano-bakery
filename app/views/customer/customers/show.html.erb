<h3>マイページ</h3>
<tr>
    <td>登録情報</td>
    <td><%= link_to "編集する", edit_customers_path, class: "btn btn-success btn-sm my-4" %></td>
</tr>

<div>
    <table border = "1", style = "border-collapse: collapse">
        <tr>
            <td>氏名</td>
            <td><%= current_customer.last_name + " " + current_customer.first_name %></td>
        </tr>
        <tr>
            <td>カナ</td>
            <td><%= current_customer.ruby_last_name + " " + current_customer.ruby_first_name %></td>
        </tr>
        <tr>
            <td>郵便番号</td>
            <td><%= current_customer.postal_code %></td>
        </tr>
        <tr>
            <td>住所</td>
            <td><%= current_customer.address %></td>
        </tr>
        <tr>
            <td>電話番号</td>
            <td><%= current_customer.phone_number %></td>
        </tr>
        <tr>
            <td>メールアドレス</td>
            <td><%= current_customer.email %></td>
        </tr>
    </table>
</div>
<div>
    <tr>
        <td>配送先</td>
        <td><%= link_to "一覧を見る", addresses_path, class: "btn btn-primary btn-sm my-4" %></td>
    </tr>
</div>
<div>
    <tr>
        <td>注文履歴</td>
        <td><%= link_to "一覧を見る", new_order_path, class: "btn btn-primary btn-sm" %></td>
    </tr>
</div>