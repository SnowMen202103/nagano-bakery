<div class="container">
    <h3>新規会員登録</h3>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <!--placeholderの色が濃い-->
      <table class="address">
        <tr class="address">
          <td class="address">名前</td>
          <td class="address"><%= f.label :'(姓)' %></td>
          <td class="address"><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: '令和' %></td>
          <td class="address"><%= f.label :'(名)' %></td>
          <td class="address"><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: '道子' %></td>
        </tr>
        <tr class="address">
          <td class="address">フリガナ</td>
          <td class="address"><%= f.label :'(セイ)' %></td>
          <td class="address"><%= f.text_field :ruby_last_name, autofocus: true, autocomplete: "ruby_last_name", placeholder: 'レイワ' %></td>
          <td class="address"><%= f.label :'(メイ)' %></td>
          <td class="address"><%= f.text_field :ruby_first_name, autofocus: true, autocomplete: "ruby_first_name", placeholder: 'ミチコ' %></td>
        </tr>
        <tr class="address">
          <td class="address"><%= f.label :'メールアドレス' %></td>
          <td class="address"></td>
          <td class="address"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com' %></td>
          <td class="address"></td>
          <td class="address"></td>
        </tr>
        <tr class="address">
          <td class="address"><%= f.label :'郵便番号(ハイフンなし)' %></td>
          <td class="address"></td>
          <td class="address"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: '0000000' %></td>
          <td class="address"></td>
          <td class="address"></td>
        </tr>
        <tr class="address">
          <td class="address"><%= f.label :'住所' %></td>
          <td class="address"></td>
          <td class="address" colspan="3"><%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: '東京都渋谷区代々木神園町0-0', size:"55" %></td>
          <td class="address"></td>
          <td class="address"></td>
        </tr>
        <tr class="address">
          <td class="address"><%= f.label :'電話番号(ハイフンなし)' %></td>
          <td class="address"></td>
          <td class="address"><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: '0000000000' %></td>
          <td class="address"></td>
          <td class="address"></td>
        </tr>
        <tr class="address">
          <td class="address"><%= f.label :'パスワード(6文字以上)' %></td>
          <td class="address"></td>
          <td class="address">
            <!--<% if @minimum_password_length %>-->
            <!--  <em>(<%= @minimum_password_length %> characters minimum)</em>-->
            <!--<% end %>-->
            <%= f.password_field :password, autocomplete: "new-password" %>
          </td>
          <td class="address"></td>
          <td class="address"></td>
        </tr>
        <tr class="address">
          <td class="address"><%= f.label :'パスワード(確認用)' %></td>
          <td class="address"></td>
          <td class="address"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          <td class="address"></td>
          <td class="address"></td>
        </tr>
        <tr class="address">
          <td class="address"></td>
          <td class="address"></td>
          <td class="address"><%= f.submit "新規会員登録", class:"btn btn-success" %></td>
          <td class="address"></td>
          <td class="address"></td>
        </tr>
        
        <div class="actions">
          
        </div>
      
      </table>
    <% end %>
    
    <div class="mt-3">
      <h3>既に登録済みの方</h3>
      <%= link_to 'こちら', new_session_path(resource_name)  %>
      <span>からログインしてください。</span>
      <!--<%= render "customer/shared/links" %>-->
    </div>

  </div>
</div>