
<div class="container">
  <div class="row">
    <div class="col">
      
      <h2>注文情報入力</h2>
      <%= form_with model: @order, url:customer_orders_path, method: :post, local: true do |f|  %>
        <h3 class="col-xs-3">支払い方法</h3>
      
        <div class="col-xs-10 radio">
          <%= f.radio_button :payment_method, :"クレジットカード", checked: true %>
          <span>&nbsp;クレジットカード</span>
        </div>
        <div class="col-xs-10">
          <%= f.radio_button :payment_method, :"銀行振込" %>
          <span>&nbsp;銀行振り込み</span>
        </div>
        
         <h3 class="col-xs-3">お届け先</h3>
          <div class="col-xs-10 radio">
            <%= f.radio_button :addresses, "residence", checked: true  %>
            <span>&nbsp;ご自身の住所</span><br>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;〒<%= current_customer.postal_code %>&nbsp;<%= current_customer.address %><br>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= current_customer.first_name %><%= current_customer.last_name %>
          </div>

          <div class="col-xs-10">
            <%= f.radio_button :addresses, "shipping_addresses" %>
              <span>&nbsp;登録済住所から選択</span><br>
              <!--<= f.collection_select() %>-->
          </div>

          <div class="col-xs-10">
            <%= f.radio_button :addresses, "new_address" %>
            <span>&nbsp;新しいお届け先</span><br>
            <div class="field form-group col-xs-11">
              <%= f.label :"郵便番号(ハイフンなし)", class: "col-sm-3" %>
              <%= f.text_field :postal_code, class: "col-sm-3" %>
            </div>
            <div class="field form-group col-xs-11">
              <%= f.label :"住所", class: "col-sm-3" %>
              <%= f.text_field :address, class: "col-sm-7" %>
            </div>
            <div class="field form-group col-xs-11">
              <%= f.label :"宛名", class: "col-sm-3" %>
              <%= f.text_field :name, class: "col-sm-4" %>
            </div>
          </div>

          <%= link_to do %>
            <div class="col-xs-8 text-center">
              <%= f.submit "確認画面へ進む", class: "btn btn-primary col-xs-5" %>
            </div>
          <% end %>
      <% end %>

    </div>
  </div>
</div>