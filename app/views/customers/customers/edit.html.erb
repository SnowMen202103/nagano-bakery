<div class=”container”>
<div class=”row”>
<div class=”col”>
<form>
<h3>会員情報編集</h3>

<%= form_with model: @customer, local:true do |f| %>
  <div class="form-row">
    <div class="form-group col-1">名前</div>
    <div class="form-group col-2"><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: '令和' %></div>
    <div class="form-group col-1"><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: '道子' %></div>
  </div>
  <div class="form-row">
    <div class="form-group col-1">フリガナ</div>
    <div class="form-group col-2"><%= f.text_field :ruby_last_name, autofocus: true, autocomplete: "ruby_last_name", placeholder: 'レイワ' %></div>
    <div class="form-group col-1"><%= f.text_field :ruby_first_name, autofocus: true, autocomplete: "ruby_first_name", placeholder: 'ミチコ' %></div>
  </div>
  <div class="form-row">
    <div class="form-group col-1">郵便番号</div>
    <div class="form-group col-1"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: '0000000' %></div>
  </div>
  <div class="form-row">
    <div class="form-group col-1">住所</div>
    <div class="form-group col-1"><%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: '東京都渋谷区代々木神園町0-0' %></div>
  </div>
  <div class="form-row">
    <div class="form-group col-1">電話番号</div>
    <div class="form-group col-1"><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: '0000000000' %></div>
  </div>
  <div class="form-row">
    <div class="form-group col-1">メールアドレス</div>
    <div class="form-group col-1"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com' %></div>
  </div>
  <div class="form-row">
    <div class="form-group col-2"><%= f.submit "変更内容を保存", class: "btn btn-success" %></div>
    <div class="form-group col-2"><%= link_to "退会する", goodbye_customers_path, class: "btn btn-danger" %></div>
  </div>
<% end %>
</form>
</div>
</div>
</div>